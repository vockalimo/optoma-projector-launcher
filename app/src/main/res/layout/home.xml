    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="36dp"
            android:paddingTop="20dp"
            app:srcCompat="@drawable/optomalogo" />

        <TextView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="36dp"
            android:paddingTop="20dp"
            android:text="10:09"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/line_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/logo"
            android:layout_alignLeft="@+id/clock"
            android:layout_alignParentBottom="false"
            android:layout_alignRight="@+id/clock"
            android:layout_alignWithParentIfMissing="false"
            android:layout_marginRight="36dp"
            app:srcCompat="@drawable/hline_ffffff" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header">

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="36dp"
            android:text="FRI 30 DEC"
            android:textSize="15sp" />

    </RelativeLayout>

    <GridLayout
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView1"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp">

        <ImageView
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/apps"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
